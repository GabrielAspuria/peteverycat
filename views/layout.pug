doctype html
html
  head
      block head
        title=title

        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel="stylesheet" href="/stylesheets/index.css")
  body
    nav
      a(href="/")
        img(src="/favicon.ico", alt="")

      if locals.authenticated
        a(href='/cats') Cats
        a(href='/users') Cat Owners
        a(href=`/users/${locals.user.id}/cats`) My Cats
        a(href='/catlists') My Cat Lists
        a(href=`/users/${user.id}/reviews`) My Reviews
        a(href=`/users/${locals.user.id}`) My Profile
        form(action='/users/log-out' method="post")
          button(type="submit") Log Out
      else
        a(href="/users/log-in") Log In
        a(href="/users/sign-up") Sign Up
        form(method='post' action='/users/demouser')
          button Demo User
    .main-content
      block content
