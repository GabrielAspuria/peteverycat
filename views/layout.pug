doctype html
html
  head
      block head
        title=title
        link(rel='stylesheet' href='/stylesheets/reset.css')
  body
    nav
      a(href="/") Home
      if locals.authenticated
        a(href='/') My Cats
        a(href='/cats') Cats
        a(href='/catlists') Cat Lists
        form(action='/users/log-out' method="post")
          button(type="submit") Log Out
      else
        a(href="/users/log-in") Log In
        a(href="/users/sign-up") Sign Up
        form(method='post' action='/users/demouser')
          button Demo User
    block content
