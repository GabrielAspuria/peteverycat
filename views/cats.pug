extends layout.pug

block content
    h1= title
    .catsContainer
        each cat in cats
          a(href=`/cats/${cat.id}`)
            .catbox
              p= cat.name

                if cat.imgUrl
                  .catContainer(style=`background-image: url(${cat.imgUrl})`)
                else
                  .catContainer(style=`background-image: url('favicon.ico')`)
