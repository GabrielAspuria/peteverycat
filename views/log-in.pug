extends layout.pug

include utils.pug

block content
  h1(class="log-in") Log into your Pet Every Cat account!
  +validationErrorSummary(errors)

  form(action="/users/log-in" method="post" class="log-in")
    input(type="hidden", name="_csrf" value=csrfToken)
    +field("Username", "username", username)
    +field("Password", "password", null, "password")
    button(type="submit") Log-In
  div.sign-up-link
    a(href="/users/sign-up") Don't have an account? Sign up!
