extends layout.pug

block content
    .cat
        div
            figure
                img(src=`${cat.imgUrl}`, alt="" style= "max-width: 200px")
        h1= cat.name
        form(action=`/cats/${cat.id}/addToCatList`, method="post")
            //- add csrf
            input(type="hidden" name="_csrf" value=csrfToken)
            select(name="catList")
                option(value="Want to Pet") Want to Pet
                option(value="Currently Petting") Currently Petting
                option(value="Pet") Pet
                option(value=`${catListVal}` selected)= `In list: ${catListId}`
            button Update Pet Status
        ul
            li= cat.breed
            li= cat.coat
            li= cat.size
            li= cat.friendly
        a(href=`/users/${cat.userId}`) My Creator
        a(href=`/cats/${cat.id}/reviews/new`) Add Review
