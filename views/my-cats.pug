extends layout
append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  script(src="/javascripts/mycats.js" type="module" defer)
block content
    append nav
        form(action='/cats/new' method='get')
            button Add Cat
    h1 My Cats
    table
        thead
            tr
                th
                th Cat Name
                th Date Created
                th Date Edited
                th
                th
        tbody
            each cat in cats
                tr(class=`cat-${cat.id}`)
                    td
                        img(src=`${cat.imgUrl}` style= "max-width: 200px")
                    td
                        a(href=`/cats/${cat.id}`)= cat.name
                    td= cat.createdAt.toDateString()
                    td= cat.updatedAt.toDateString()
                    td
                        a(href=`/cats/edit/${cat.id}`)
                            button(class='edit') Edit
                        button(class="delete" id=cat.id) Delete
