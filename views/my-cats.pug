extends layout
append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  script(src="/javascripts/mycats.js" type="module" defer)
block content
    append nav
    h1 My Cats
    form(action='/cats/new' method='get')
        button Add Cat
    .tableContainer
        table
           thead
               tr
                   th
                   th Cat Name
                   th Date Created
                   th Date Edited
                   th Options
                   th
           tbody
               each cat in cats
                   tr(class=`cat-${cat.id} catrow`)
                    td
                          a(href=`/cats/${cat.id}`)
                            img(src=`${cat.imgUrl}`, alt="")
                    td= cat.name
                       td= cat.createdAt.getMonth()+"/"+cat.createdAt.getDate()+"/"+cat.createdAt.getFullYear()+" "+cat.createdAt.getHours()+":"+cat.createdAt.getMinutes()
                       td= cat.updatedAt.getMonth()+"/"+cat.updatedAt.getDate()+"/"+cat.updatedAt.getFullYear()+" "+cat.updatedAt.getHours()+":"+cat.updatedAt.getMinutes()
                       td
                           a(href=`/cats/edit/${cat.id}`)
                               button(class='edit') Edit
                           button(class="delete" id=cat.id) Delete
    form(action='/cats/new' method='get')
        button Add Cat
